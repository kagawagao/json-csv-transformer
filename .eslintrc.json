{
  "extends": [
    "standard",
    "plugin:flowtype/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": ["flowtype", "prettier"],
  "settings": {
    "flowtyped": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "env": {
    "node": true,
    "browser": true,
    "jest": true
  }
}
