{
  "presets": [
    ["@babel/preset-env", {
      "modules": false
    }],
    ["@babel/preset-stage-0", {
      "decoratorsLegacy": true
    }],
    "@babel/preset-flow"
  ],
  "env": {
    "commonjs": {
      "presets": [
        "@babel/preset-env",
        ["@babel/preset-stage-0", {
          "decoratorsLegacy": true
        }],
        "@babel/preset-flow"
      ],
      "plugins": [
        "add-module-exports"
      ]
    },
    "test": {
      "presets": [
        "@babel/preset-env",
        ["@babel/preset-stage-0", {
          "decoratorsLegacy": true
        }],
        "@babel/preset-flow"
      ],
      "plugins": [
        "add-module-exports"
      ]
    }
  }
}
